<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.ronnieotieno.kwgassignment.presentation.ui.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/toPostsViewFragment"
            app:destination="@id/postsViewFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/postsViewFragment"
        android:name="dev.ronnieotieno.kwgassignment.presentation.ui.PostsViewFragment"
